{
  "openapi": "3.0.0",
  "info":{
    "title": "ATLAS",
    "description": "This is a Documentation of ATLAS API",
    "version":"1.0.0",
    "contact":{
      "email":"ibukundidier@gmail.com"
    }
  },
  "paths":{
    "/users":{
      "post":{
        "tags": ["Users"],
        "summary":"Create a new user",
        "description":"Create a new user",
        "requestBody":{
          "content": {
            "application/json":{
              "schema":{
                "type":"object",
                "properties":{
                  "name":{
                    "type":"string"
                  },
                  "email":{
                    "type":"string"
                  }
                },
                "example":{
                  "name":"Username",
                  "email":"username@username.com"
                }
              }
            }
         }
        }, 
        "responses":{
          "201":{
            "description":"Created",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "example":{
                    "id": "2dfcdbac-dd0a-458f-a547-865100702e27",
                    "admin": false,
                    "created_at": "2021-05-29T00:54:09.671Z",
                    "updated_at": "2021-05-29T00:54:09.671Z",
                    "name": "Username",
                    "email": "username@username.com"
                  }
                }
              }
            }
          },
          "400":{
            "description": "User Already Exists !!!",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "example":{
                    "error":"User Already Exists !!!"
                  }
                }
              }
            }
          }
        }
      }, 
      "get":{
        "tags":["Users"],
        "summary": "List all Users",
        "description":"List all Users",
        "parameters":[{
            "name":"user_id",
            "in":"header",
            "descripção":"Admin ID",
            "required":true,
            "schema":{
              "type":"string",
              "format":"uuid"
            }
          }]
        ,
        "responses":{
          "200":{
            "description":"Success",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "id":{
                      "type":"uuidv4"
                    },
                    "admin":{
                      "type":"boolean"
                    },
                    "created_at":{
                      "type":"Date"
                    },
                    "updated_at":{
                      "type":"Date"
                    },
                    "name":{
                      "type":"string"
                    },
                    "email":{
                      "type":"string"
                    }
                  }
                }
              }
            }
          },
          "400":{
            "description": "User is not a Admin !!!",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "example":{
                    "error":"User is not a Admin !!!"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}":{
      "get":{
        "tags": ["Users"],
        "summary":"Get current user Profile",
        "description":"Get user current Profile",
        "parameters":[{
          "name":"user_id",
          "in":"path",
          "descripção":"the sample user ID",
          "required":true,
          "schema":{
            "type":"string",
            "format":"uuid"
          }
        }], 
        "responses":{
          "200":{
            "description":"Sucess",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "id":{
                      "type":"uuidv4"
                    },
                    "admin":{
                      "type":"boolean"
                    },
                    "created_at":{
                      "type":"Date"
                    },
                    "updated_at":{
                      "type":"Date"
                    },
                    "name":{
                      "type":"string"
                    },
                    "email":{
                      "type":"string"
                    }
                  }
                }
              }
            }
          },
          "404":{
            "description": "User Information not found",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "example":{
                    "error":"User Information not found"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin":{
      "patch":{
        "tags": ["Users"],
        "summary":"Make an user to Admin",
        "description":"Make an user to Admin",
        "parameters":[{
          "name":"user_id",
          "in":"path",
          "descripção":"the sample user ID",
          "required":true,
          "schema":{
            "type":"string",
            "format":"uuid"
          }
        }], 
        "responses":{
          "200":{
            "description":"Sucess",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "id":{
                      "type":"uuidv4"
                    },
                    "admin":{
                      "type":"boolean"
                    },
                    "created_at":{
                      "type":"Date"
                    },
                    "updated_at":{
                      "type":"Date"
                    },
                    "name":{
                      "type":"string"
                    },
                    "email":{
                      "type":"string"
                    }
                  }
                }
              }
            }
          },
          "404":{
            "description": "User ID not found !!!",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "example":{
                    "error":"User ID not found !!!"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}